@model MyFirstWebApp.Models.CreateCashierViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cashier</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CashierName" class="control-label"></label>
                <input asp-for="CashierName" class="form-control" />
                <span asp-validation-for="CashierName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            @if(Model.ShopmodelId == 0)
            {
                <div>
            <label asp-for="ShopmodelId"></label>
            <select asp-for="ShopmodelId" asp-items="Model.Shops"></select>
            <span asp-validation-for="ShopmodelId" class="text-danger"></span>
                </div>
            }
            else
            {
                <input name="ShopmodelId" value="@Model.ShopmodelId" type="hidden">
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

