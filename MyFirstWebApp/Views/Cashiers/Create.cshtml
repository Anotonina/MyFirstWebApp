@model MyFirstWebApp.Models.CashierViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cashier</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cashier.CashierName" class="control-label"></label>
                <input asp-for="Cashier.CashierName" class="form-control" />
                <span asp-validation-for="Cashier.CashierName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cashier.Age" class="control-label"></label>
                <input asp-for="Cashier.Age" class="form-control" />
                <span asp-validation-for="Cashier.Age" class="text-danger"></span>
            </div>

           
            <div>
            <label asp-for="Cashier.User"></label>
            <select asp-for="Cashier.UserId" asp-items="Model.Users"></select>
            <span asp-validation-for="Cashier.UserId" class="text-danger"></span>
                </div>
            @if(Model.Cashier.ShopModelId == 0)
            {
                <div>
            <label asp-for="Cashier.ShopModelId"></label>
            <select asp-for="Cashier.ShopModelId" asp-items="Model.Shops"></select>
            <span asp-validation-for="Cashier.ShopModelId" class="text-danger"></span>
                </div>
            }
            else
            {
                <input name="Cashier.ShopModelId" value="@Model.Cashier.ShopModelId" type="hidden">
            }
               
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

